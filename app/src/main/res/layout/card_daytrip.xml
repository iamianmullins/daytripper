<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="dayTrip"
        type="org.wit.daytripper.models.DayTripperModel" />
</data>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp"
    android:layout_marginEnd="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RatingBar
            android:id="@+id/ratingBarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/black"
            android:theme="@style/RatingBarStatic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:isIndicator="true"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:focusable="false"/>


        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="394dp"
            android:layout_height="227dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/change_trip_image"
            android:src="@drawable/lotr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBarView" />


        <TextView
            android:id="@+id/dayTripTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="@{dayTrip.title}"
            android:textAlignment="viewStart"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageIcon"
            tools:text="A Title" />



        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:text="@{dayTrip.description}"
            app:layout_constraintStart_toStartOf="@+id/dayTripTitle"
            app:layout_constraintTop_toBottomOf="@+id/dayTripTitle"
            tools:text="A Description" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dayTrip.email}"
            android:textAlignment="viewStart"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/description"
            app:layout_constraintTop_toBottomOf="@+id/description"
            tools:text="User Email" />

        <TextView
            android:id="@+id/timest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{dayTrip.timest}"
            android:textAlignment="viewStart"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/description"
            tools:text="TimeStamp" />

        <TextView
            android:id="@+id/regiondt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{dayTrip.region}"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/email"
            tools:text="Region" />

        <TextView
            android:id="@+id/targetdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{dayTrip.target}"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.442"
            app:layout_constraintStart_toEndOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/timest"
            tools:text="Target" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</layout>