<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/dayTripFragment">

    <fragment
        android:id="@+id/dayTripFragment"
        android:name="org.wit.daytripper.fragments.DayTripFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_daytrip">
        <action
            android:id="@+id/action_dayTripFragment_to_reportFragment"
            app:destination="@id/reportFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/reportFragment"
        android:name="org.wit.daytripper.fragments.ReportFragment"
        android:label="@string/reportTitle"
        tools:layout="@layout/fragment_report" >
        <action
            android:id="@+id/action_reportFragment_to_dayTripFragment2"
            app:destination="@id/dayTripFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
</navigation>